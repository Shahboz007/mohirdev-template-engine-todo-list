<%- include('header') -%>

  <%if(isNotFound){%>
    <% if(errMsg !==''){ %>
      <div class="form__control">
        <div class="alert error">
          <strong>404!</strong> <%-errMsg%>.
        </div>
        
      </div>
      <a href="/" class="btn btn-primary">Go back</a>
    <% } %>
  <%}else{%>
    <form class="form" method="POST" action="/task/<%-id%>/update">
      <% if(errMsg !==''){ %>
        <div class="form__control">
          <div class="alert error">
            <strong>Error!</strong> <%-errMsg%>.
          </div>
        </div>
      <% } %>
      <div class="form__control">
        <%-include('components/sectionTitle', {title:"Create new task"})-%>
      </div>
      <div class="form__control">
        <label class="label">Title</label>
        <input class="input" type="text" name="title" placeholder="Enter title" autofocus value="<%-initialValues?.title%>" />
      </div>
      <div class="form__control">
        <label class="label">Description</label>
        <input class="input" type="text" name="desc" placeholder="Enter description"  value="<%-initialValues?.desc%>" />
      </div>
      <div class="form__control">
        <button class="btn btn-primary">Update</button>
      </div>
    </form>
  <%}%>

  <%- include('footer') -%>