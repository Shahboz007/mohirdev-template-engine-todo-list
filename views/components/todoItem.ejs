<div class="todo__item">
  <label class="todo__item--label">
    <input data-item="todoCheckbox" data-value="<%-id%>" data-status="<%-status%>" data-when-checked="completed" type="checkbox" name="checkbox" />
    <div class="todo__item--body">
      <h2 class="todo__item--title"><%- title%></h2>
      <p class="todo__item--desc">
        <%-text%>
      </p>
      <% if(status.toLowerCase()==='pending' ){%>
        <p class="todo__item--pending"><%-status%></p>
        <%} else {%>
          <p class="todo__item--completed"><%-status%></p>
          <%} %>
    </div>
    <div class="todo__item--operation">
      <a class="btn-icon" href="/task/<%-id%>/edit">
        <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
          <g clip-path="url(#clip0_14_1498)">
            <path
              d="M8 19.247V21.6112C8 21.8289 8.17109 22 8.38883 22H10.753C10.854 22 10.9551 21.9611 11.0251 21.8833L19.5173 13.399L16.601 10.4827L8.11665 18.9671C8.03888 19.0449 8 19.1382 8 19.247ZM21.7725 11.1437C22.0758 10.8404 22.0758 10.3505 21.7725 10.0472L19.9528 8.22747C19.6495 7.92418 19.1596 7.92418 18.8563 8.22747L17.4331 9.6506L20.3494 12.5669L21.7725 11.1437Z"
              fill="#007FFF" />
          </g>
          <defs>
            <clipPath id="clip0_14_1498">
              <rect width="30" height="30" rx="15" fill="white" />
            </clipPath>
          </defs>
        </svg>

      </a>
      <form method="POST" action="/task/<%-id%>/delete">
        <button class="btn-icon" type="submit">
          <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M20.9706 9.65687C21.4169 10.1032 21.4169 10.8268 20.9706 11.2731L16.93 15.3137L20.9706 19.3543C21.4169 19.8006 21.4169 20.5243 20.9706 20.9706C20.5242 21.4169 19.8006 21.4169 19.3543 20.9706L15.3137 16.93L11.2731 20.9706C10.8268 21.4169 10.1032 21.4169 9.65685 20.9706C9.21054 20.5243 9.21054 19.8006 9.65685 19.3543L13.6975 15.3137L9.65685 11.2731C9.21054 10.8268 9.21054 10.1032 9.65685 9.65687C10.1032 9.21055 10.8268 9.21055 11.2731 9.65687L15.3137 13.6975L19.3543 9.65687C19.8006 9.21055 20.5242 9.21055 20.9706 9.65687Z"
              fill="#FF5E5E" />
          </svg>

        </button>
      </form>
    </div>
  </label>
</div>